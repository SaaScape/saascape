{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,

    "baseUrl": "../", // Assuming your types directory is inside the src folder
    "paths": {
      "types/*": ["types/*"] // Maps all imports starting with 'types/' to the corresponding files in the 'types' directory
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
